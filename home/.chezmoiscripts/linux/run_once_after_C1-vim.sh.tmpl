{{- if eq .osid "linux-ubuntu" -}}
#!/bin/sh

echo "[Dotfiles] Vim"

vim_dir=/opt/vim
vim_src=/opt/src/vim

sudo mkdir -p $vim_dir

if [ -f "${vim_dir}/bin/vim" ]; then
    echo "Vim is already installed in /opt/vim"
else
    echo "Build vim"

    sudo mkdir -p /opt/src

    sudo git clone https://github.com/vim/vim.git $vim_src

    cd $vim_src && \
    sudo CC=clang ./configure --prefix=$vim_dir --enable-cscope --enable-terminal --enable-multibyte --enable-gnome-check && \
    sudo make distclean && \
    sudo make && \
    sudo make install
fi

{{ end -}}

